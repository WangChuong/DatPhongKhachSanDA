@model DatPhongKhachSan.Models.Phong

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">Danh sách phòng</li>
</ol>

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Are you sure you want to delete this?
    </div>
    <div class="card-body">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Số phòng")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SoP)
                </dd>

                <dt>
                    @Html.DisplayName("Loại phòng")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LoaiPhong.TenLP)
                </dd>

                <dt>
                    Mô tả
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LoaiPhong.MoTa)
                </dd>





                <dt>
                    mã loại phòng
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LoaiPhong.MaLP)
                </dd>

                <dt>
                    Mã tình trạng
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TT_Phong.MaTinhTrang)
                </dd>



            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</div>

