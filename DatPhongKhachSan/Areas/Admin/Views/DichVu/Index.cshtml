@model IEnumerable<DatPhongKhachSan.Models.DichVu>

@{
    ViewBag.Title = "Danh sách dịch vụ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">Danh sách dịch vụ</li>
</ol>
<p>
    @Html.ActionLink("Thêm dịch vụ", "Create")
</p>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh sách dịch vụ
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            Tên dịch vụ
                        </th>
                        <th>
                            Giá dịch vụ
                        </th>
                        <th>
                            Tình trạng
                        </th>
                       
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>
                            
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenDV)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GiaDV)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TinhTrang)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.MaDV }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.MaDV })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at @DateTime.Now</div>
</div>