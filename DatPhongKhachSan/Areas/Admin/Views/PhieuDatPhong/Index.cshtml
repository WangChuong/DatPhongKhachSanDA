@model IEnumerable<DatPhongKhachSan.Models.DonDatPhong>

@{
    ViewBag.Title = "Danh sách phiếu đặt phòng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">Phiếu đặt phòng</li>
</ol>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Phiếu đặt phòng
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("Mã KH")
                        </th>
                        <th>
                            @Html.DisplayName("Tên KH")
                        </th>
                        <th>
                            @Html.DisplayName("Ngày đặt")
                        </th>
                        <th>
                            @Html.DisplayName("Ngày vào")
                        </th>
                        <th>
                            @Html.DisplayName("Ngày ra")
                        </th>
                        <th>
                            @Html.DisplayName("Số phòng")
                        </th>
                        <th>
                            @Html.DisplayName("Tình trạng")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
    {
        if (item.MaTinhTrang == 1)
        {
                <tr class="alert-warning">
                    <td>
                        @Html.DisplayFor(modelItem => item.MaKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDi)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Phong.SoP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TT_DonDatPhong.TenTinhTrang)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaDDP }) |

                        @Html.ActionLink("Delete", "Delete", new { id = item.MaDDP }) |

                    </td>
                </tr>
}
else if (item.MaTinhTrang == 3 || item.MaTinhTrang == 4)
{
                <tr class="alert-primary">
                    <td>
                        @Html.DisplayFor(modelItem => item.MaKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDi)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Phong.SoP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TT_DonDatPhong.TenTinhTrang)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaDDP }) |

                        @Html.ActionLink("Delete", "Delete", new { id = item.MaDDP }) |

                        @Html.ActionLink("Chi tiết", "ChiTietPhieuDatPhong", new { id = item.MaDDP })
                    </td>
                </tr>
}
else
{
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDi)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Phong.SoP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TT_DonDatPhong.TenTinhTrang)
                    </td>
                    <td>


                        @Html.ActionLink("Delete", "Delete", new { id = item.MaDDP })
                    </td>
                </tr>
}
}
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at @DateTime.Now</div>
</div>

