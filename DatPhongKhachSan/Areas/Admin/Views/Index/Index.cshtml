
@{
    ViewBag.Title = "Bảng quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using DatPhongKhachSan.Models
@model List<Phong>

<!-- SSS -->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">Dashboard</li>
</ol>
<div class="container">
    <div class="row">
        <div class="col-md-4"><div class="alert alert-success">Có @ViewBag.so_phong_trong phòng đang trống</div></div>
        <div class="col-md-4"><div class="alert alert-danger">Có @ViewBag.so_phong_sd phòng đang được sử dụng</div></div>
        <div class="col-md-4"><div class="alert alert-warning">Có @ViewBag.so_phong_don phòng dừng hoạt động</div></div>
    </div>
</div>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> List Rooms
    </div>
    <div class="card-body">
        <div class="table-responsive">

            <!-- /SSS -->
            <table class="table table-bordered table-striped table-hover" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Số phòng</th>
                        <th>Tên loại phòng</th>
                        <th>Loại phòng</th>
                        <th>Giá</th>
                        <th>Tình trạng</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {

                    <tr>
                        <td>@item.MaP</td>
                        <td>@item.SoP</td>
                        <td>@item.LoaiPhong.TenLP</td>
                        <td>@item.LoaiPhong.MoTa</td>
                        <td>@item.GiaP / Ngày</td>


                        @if (item.MaTinhTrang == 1)
                        {
                            <td><span class="badge badge-success badge-g">@item.TT_Phong.TenTinhTrang</span></td>
                            <td></td>
                        }
                        else if (item.MaTinhTrang == 2)
                        {
                            <td><span class="badge badge-danger badge-g">>@item.TT_Phong.TenTinhTrang</span></td>

                        }
                        else if (item.MaTinhTrang == 3)
                        {
                            <td><span class="badge badge-warning badge-g">@item.TT_Phong.TenTinhTrang</span></td>

                        }

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at @DateTime.Now</div>
</div>