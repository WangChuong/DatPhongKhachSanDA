@model IEnumerable<DatPhongKhachSan.Models.LoaiPhong>

@{
    ViewBag.Title = "List Rooms";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">Danh sách loại phòng</li>
</ol>
<p>
    @Html.ActionLink("Thêm loại phòng", "Create")
</p>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh sách loại phòng
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            Loại phòng
                        </th>
                        <th>
                            Mô tả
                        </th>
                        <th>
                            Tình trạng
                        </th>
                        @if (Session["AD"] != null && ((DatPhongKhachSan.Models.tblAdmin01)Session["AD"]).MaCV <= 1)
    {
                    <th></th>
}
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>
                           
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenLP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MoTa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TinhTrang)
                        </td>
                        @if (Session["AD"] != null && ((DatPhongKhachSan.Models.tblAdmin01)Session["AD"]).MaCV <= 1)
                        {
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MaLP }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.MaLP })
                            </td>
                        }
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at @DateTime.Now</div>
</div>
