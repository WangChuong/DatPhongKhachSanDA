@model IEnumerable<DatPhongKhachSan.Models.DonDatPhong>

@{
    ViewBag.Title = "Danh sách đơn đặt phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="gtco-header" class="gtco-cover gtco-cover-md g-header" role="banner" style="background-image: url(/Content/Home/images/img_bg_1.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</header>
<div class="container">
    <br /><br /><br /><br />
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@ViewBag.title</h3>
        </div>
        <div class="panel-body">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Đơn đặt phòng
                        </th>
                        <th>
                            Số phòng
                        </th>
                        <th>
                            Ngày vào
                        </th>
                        <th>
                            Ngày dự kiến ra
                        </th>
                        <th>
                            Tình trạng
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaDDP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phong.SoP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayDen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayDi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TT_DonDatPhong.TenTinhTrang)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>