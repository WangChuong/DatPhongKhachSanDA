
@{
    ViewBag.Title = "Đặt phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DatPhongKhachSan.Models.DonDatPhong>
<header id="gtco-header" class="gtco-cover gtco-cover-md g-header" role="banner" style="background-image: url(/Content/Home/images/img_bg_1.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</header>
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Phiếu đặt phòng</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Result", "WebKhachSan"))
                    {
                        @Html.AntiForgeryToken()
                        if (ViewBag.MaP == null || ((String)ViewBag.MaP).Equals("[]"))
                        {
                            <div class="alert alert-warning" role="alert">Bạn chưa chọn phòng để đặt. Vui lòng chọn phòng để hoàn tất phiếu đặt phòng !</div>
                        }
                        else
                        {
                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group hidden">
                                    @Html.Label("Username", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBox("MaKH", (int)ViewBag.MaKH, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Họ tên", htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBox("TenKH", (String)ViewBag.TenKH, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Ngày đặt", htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBox("NgayDen", (String)ViewBag.NgayDen, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Ngày vào", htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBox("NgayDen", (String)ViewBag.NgayDen, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Ngày đi", htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBox("ngay_ra", (String)ViewBag.NgayDi, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="form-group hidden">
                                    @Html.Label("Mã phòng", htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBox("MaP", (String)ViewBag.MaP, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.Label("Số phòng", htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.TextBox("SoP", (String)ViewBag.SoP, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-9">
                                        <input type="submit" value="Đặt phòng" class="btn btn-success" />
                                        <a href="@Url.Action("HuyPhieudatPhong", "WebKhachSan")"><span class="btn btn-default">Hủy</span></a>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                    <div>
                        @Html.ActionLink("Back to Home", "Index")
                    </div>
                </div>
            </div>

        </div> <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Phòng đã đặt</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-hover" id="dataTable" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("Tên khách hàng")
                                </th>
                                <th>
                                    @Html.DisplayName("Ngày đặt")
                                </th>
                                <th>
                                    @Html.DisplayName("Ngày vào")
                                </th>
                                <th>
                                    @Html.DisplayName("Ngày ra")
                                </th>
                                <th>
                                    @Html.DisplayName("Số phòng")
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayDen)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayDen)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayDi)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phong.SoP)
                                    </td>
                                    <td>
                                        <a class="nav-link" href="@Url.Action("XoaPhieuDatPhong", "Account", new { id = item.MaDDP })">Hủy</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


