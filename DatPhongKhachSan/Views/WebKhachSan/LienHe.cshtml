
@{
    ViewBag.Title = "LienHe";

}

<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url(/Content/Home/images/img_bg_1.jpg)">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-center">

                <div class="row row-mt-15em">
                    <div class="col-md-12 mt-text animate-box" data-animate-effect="fadeInUp">
                        <span class="intro-text-small">Khách sạn đạt chuẩn 5 sao tại Việt Nam !</span>
                        <h1 class="cursive-font">Contact With Us!</h1>
                    </div>

                </div>

            </div>
        </div>
    </div>
</header>


<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6 animate-box">
                    <h3>Get In Touch</h3>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        DatPhongKhachSan.Models.YKienKhachHang yk = (DatPhongKhachSan.Models.YKienKhachHang)Session["YK"];
                        if (yk == null)
                        {
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label class="sr-only" for="name">Name</label>
                                    @*<input type="text" id="name" class="form-control" placeholder="Your firstname">*@
                                    @Html.TextBox("HoTen", null, new { @class = "form-control", placeholder = "Your Name" })
                                </div>

                            </div>

                            
                        }

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="sr-only" for="message">Message</label>
                                @*<textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="Write us something"></textarea>*@
                                @Html.TextArea("NoiDung", null, new { @class = "form-control", placeholder = "Write us something", cols = "30", rows = "10" })
                            </div>
                        </div>
                        <div class="form-group">
                            <input onclick="return checkSMS()" type="submit" value="Send Message" class="btn btn-primary">
                        </div>

                    }
                </div>
                <div class="col-md-5 col-md-push-1 animate-box">

                    <div class="gtco-contact-info">
                        <h3>Contact Information</h3>
                        <ul>
                            <li class="address">Royal hotel nguyễn du bến nghé  <br> quận 1 thành phố hồ chí minh</li>
                            <li class="phone"><a href="tel://0333932605">+84 0333932605</a></li>
                            <li class="email"><a href="quangtruongle369@gmail.com">quangtruongle369@gmail.com</a></li>
                            <li class="url"><a href="http://www.royalhotelsaigon.com/vi.html">Royal hotel</a></li>
                        </ul>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function checkSMS() {
        var ht = $('#HoTen');
       
        if (ht != null)
            if (ht.val() == "") {
                alert('Phải nhập họ tên !');
                return false;
            }
       
        var nd = $('#NoiDung').val();
        if (nd.length < 10) {
            alert('Nội dung quá ngắn !');
            return false;
        } else if (nd.length >= 500) {
            alert('Nội dung quá dài !');
            return false;
        }
        return true;
    }
</script>

